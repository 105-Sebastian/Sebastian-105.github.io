// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node
{
	"name": "Node.js",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/javascript-node:0-18-bullseye",
	"features": {
		"ghcr.io/devcontainers-contrib/features/jshint:2": {}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "npm install",
	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code. asdf
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"ritwickdey.liveserver",
				"hridoy.jquery-snippets",
				"donjayamanne.jquerysnippets",
				"esbenp.prettier-vscode",
				"abusaidm.html-snippets",
				"joy-yu.css-snippets",
				"akamud.vscode-javascript-snippet-pack",
				"xabikos.javascriptsnippets",
				"nathanchapman.javascriptsnippets",
				"ms-vscode.remote-server",
				"github.remotehub",
				"binarybytes.snippets",
				"piyushvscode.nodejs-snippets",
				"temir.javascriptsnippets",
				"boundarystudio.html-extentions-pack",
				"eamodio.gitlens",
				"antfu.icons-carbon"
			]
		}
	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}